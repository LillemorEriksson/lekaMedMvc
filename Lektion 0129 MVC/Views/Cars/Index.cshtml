@model List<Lektion_0129_MVC.Models.Car>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-6">

        @foreach (var oneCar in Model)
        {
            <div class="row">
                <div class="col-md-2"> Id: @oneCar.Id</div>
                <div class="col-md-3"> Brand: @oneCar.Brand</div>
                <div class="col-md-3"> Model: @oneCar.Model</div>
                <div class="col-md-2">maxSpeed: @oneCar.MaxSpeed</div>
                <div class="col-md-2"> maxSpeed:@Html.ActionLink("Remove", "RemoveCar", new { carId = oneCar.Id },new { @class ="btn btn-warning" }) </div>

               
            </div>
            <hr />
        }

            </div>
     <div class="col-md-6">
         @Html.ActionLink("Create new cars","Create")

    </div>
</div>
